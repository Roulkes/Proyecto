<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario</title>
</head>
<body>
    <h1>Editar Usuario</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Fecha de nacimiento</th>
                <th>Sexo</th>
                <th>Edad</th>
                <th>Altura</th>
                <th>Peso</th>
                <th>Numero de cuenta</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.id %></td> <!-- ID del usuario -->
                <td><%= user.name %></td> <!-- Nombre del usuario -->
                <td><%= user.email %></td> <!-- Email del usuario -->
                <td><%= user.fecha_nacimiento %></td> <!-- Fecha de nacimiento -->
                <td><%= user.sexo %></td> <!-- Sexo del usuario -->
                <td><%= user.edad %></td> <!-- Edad del usuario -->
                <td><%= user.altura %></td> <!-- Altura -->
                <td><%= user.peso %></td> <!-- Peso -->
                <td><%= user.numero_cuenta %></td> <!-- Número de cuenta -->
                </td>
            </tr>
            <% }) %>
         </tbody>
    </table>
    <!-- Formulario para editar un usuario -->
    <form action="/edit/<%= user.id %>" method="POST">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" value="<%= user.name %>" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" required>

        <label for="fecha_nacimiento">Fecha de nacimiento:</label>
        <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" value="<%= user.fecha_nacimiento %>" required>

        <label for="sexo">Sexo:</label>
        <input type="text" id="sexo" name="sexo" value="<%= user.sexo %>" required>

        <label for="edad">Edad:</label>
        <input type="number" id="edad" name="edad" value="<%= user.edad %>" required>

        <label for="altura">Altura:</label>
        <input type="number" step="0.01" id="altura" name="altura" value="<%= user.altura %>" required>

        <label for="peso">Peso:</label>
        <input type="number" step="0.01" id="peso" name="peso" value="<%= user.peso %>" required>

        <label for="numero_cuenta">Número de cuenta:</label>
        <input type="text" id="numero_cuenta" name="numero_cuenta" value="<%= user.numero_cuenta %>" required>

        <button type="submit">Guardar Cambios</button>
    </form>

    <br>
    <a href="/">Volver a la lista de usuarios</a>
</body>
</html>
